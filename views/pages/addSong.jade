extends ../layout

block content
	.container
		.row
			form.form-horizontal(method='post' ,action = 'new')
				input(type='hidden' , name ='song[_id]' value = '#{song._id}') 
				.form-group
					label.col-sm-2.control-label(for='inputSong') 歌曲名称
					.col-sm-10
						input#inputSong.form-control(type='text' ,name='song[name]' , value= '#{song.name}')
				.form-group
					label.col-sm-2.control-label(for='inputUrl') 歌曲地址
					.col-sm-10
						input#inputUrl.form-control(type='text' , name='song[url]' , value= '#{song.url}')
				.form-group
					.col-sm-offest-2.col-sm-10
						button.btn.btn-default(type='submit') 录入